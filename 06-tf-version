#How  to specify the terraform version


$ terraform version

$ vi terraform.tf

terraform {
  required_version = ">=1.0.0"

}



or

terraform {
  required_version = "=1.0.0"

}


or

terraform {
  required_version = "<=1.0.0"

}

$ terraform init




# Terrarom version and terraform aws plugin version

$ vi terraform.ft
terraform {
  required_version = ">= 1.0.0"
  required_providers {
    aws = {
    source = "hashicorp/aws"
    version = "~> 3.0"
    }
  }
}

$ terraform init
